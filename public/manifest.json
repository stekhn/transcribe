{
    "name": "Transcribe",
    "short_name": "Transcribe",
    "description": "Convert audio to text using Whisper speech-to-text models, all processed locally on your device for maximum privacy and data security.",
    "lang": "en",
    "start_url": "/transcribe/",
    "id": "/transcribe/",
    "display": "standalone",
    "orientation": "portrait-primary",
    "theme_color": "#3b82f6",
    "background_color": "#3b82f6",
    "icons": [
        {
            "src": "icon-any.svg",
            "sizes": "any",
            "type": "image/svg+xml",
            "purpose": "any"
        },
        {
            "src": "icon-any.png",
            "sizes": "any",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "icon-192-maskable.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "icon-512-maskable.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "icon-1024-maskable.png",
            "sizes": "1024x1024",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],
    "screenshots": [
        {
            "src": "screenshot-wide.jpg",
            "sizes": "1200x900",
            "type": "image/jpg",
            "form_factor": "wide",
            "label": "Transcribe App"
        },
        {
            "src": "screenshot-narrow.jpg",
            "sizes": "900x1200",
            "type": "image/jpg",
            "form_factor": "narrow",
            "label": "Transcribe App"
        }
    ],
    "protocol_handlers": [
        {
            "protocol": "web+audio",
            "url": "/transcribe/?url=%s"
        }
    ],
    "share_target": {
        "action": "/transcribe/?share-target",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "files": [
                {
                    "name": "audio_file",
                    "accept": ["audio/*"]
                }
            ]
        }
    }
}
